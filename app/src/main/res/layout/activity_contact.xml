<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="tr.edu.iyte.irl.irl.ContactActivity">

    <TextView
        android:id="@+id/title_feedback"
        android:text="Geribildirim Formu"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#555"
        android:layout_marginLeft="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/title_feedback"
        android:hint="John Doe"
        android:inputType="textCapWords"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/name"
        android:inputType="textEmailAddress"
        android:textSize="20sp"
        android:hint="SET ERROR example@mail.com"/>
    <EditText
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/email"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="4dp"
        android:gravity="top|left"
        android:textSize="20sp"
        android:inputType="textMultiLine|textCapSentences"
        android:background="#ececec"
        android:hint="Burayi duzelt..."/>
    <Button
        android:id="@+id/button_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_below="@id/message"
        android:padding="15dp"
        android:textSize="18sp"
        android:text="Gonder!"/>

</RelativeLayout>
