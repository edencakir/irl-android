<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarThumbVertical="@drawable/custom_scrollbar"
    android:scrollbars="vertical">

    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:columnCount="1"
        android:rowCount="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_row="0"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="0.02" />

            <ImageView
                android:id="@+id/cizgi"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="0.48"
                android:background="@color/irl_blue"
                android:src="@drawable/cizgi" />

            <View
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="0.02" />

            <ImageView
                android:id="@+id/sumo"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="0.48"
                android:background="@color/irl_blue"
                android:src="@drawable/sumo" />

            <View
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="0.02" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_row="1"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="0.02" />

            <ImageView
                android:id="@+id/mini"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="0.48"
                android:background="@color/irl_blue"
                android:src="@drawable/mini" />

            <View
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="0.02" />

            <ImageView
                android:id="@+id/coklumini"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="0.48"
                android:background="@color/irl_blue"
                android:src="@drawable/coklumini" />

            <View
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="0.02" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_row="2"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="0.02" />

            <ImageView
                android:id="@+id/yangin"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="0.48"
                android:background="@color/irl_blue"
                android:src="@drawable/yangin" />

            <View
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="0.02" />

            <ImageView
                android:id="@+id/arazi"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="0.48"
                android:background="@color/irl_blue"
                android:src="@drawable/arazi" />

            <View
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="0.02" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_row="3"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="0.02" />

            <ImageView
                android:id="@+id/cop"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="0.48"
                android:background="@color/irl_blue"
                android:src="@drawable/cop" />

            <View
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="0.02" />

            <ImageView
                android:id="@+id/serbest"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="0.48"
                android:background="@color/irl_blue"
                android:src="@drawable/serbest" />

            <View
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="0.02" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_row="4"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="0.02" />

            <ImageView
                android:id="@+id/tasarla"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="0.96"
                android:background="@color/irl_blue"
                android:src="@drawable/tasarla" />

            <View
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="0.02" />

        </LinearLayout>

    </GridLayout>

</ScrollView>
